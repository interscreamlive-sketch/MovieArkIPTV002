<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tcl.movieark">

    <application
        android:name=".app.MainApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.home.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.iptv.IptvActivity"
            android:screenOrientation="landscape"
            android:exported="true">
            <intent-filter>
                <action android:name="com.tcl.movieark.iptv" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".player.VideoPlayActivity"
            android:screenOrientation="landscape"
            android:exported="false" />

        <activity android:name=".ui.mediaDetail.MediaDetailActivity" />
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.personal.MediaLibraryActivity" />
        <activity android:name=".ui.setting.SettingActivity" />

    </application>

</manifest>
